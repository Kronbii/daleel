{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "@daleel/db#build": {
      "dependsOn": ["@daleel/db#prisma:generate"],
      "outputs": ["dist/**"]
    },
    "@daleel/web#build": {
      "dependsOn": ["@daleel/db#build", "@daleel/db#prisma:generate"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "prisma:generate": {
      "cache": false,
      "outputs": ["node_modules/.prisma/client/**"]
    },
    "prisma:migrate": {
      "cache": false
    },
    "prisma:studio": {
      "cache": false,
      "persistent": true
    },
    "seed": {
      "cache": false
    }
  }
}

